{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,      // Gera os arquivos .d.ts (CRUCIAL)
    "outDir": "./dist",       // Para onde vai o JS compilado
    "rootDir": "./src",
    "composite": true,        // Permite ser referenciado
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}