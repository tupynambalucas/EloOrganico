{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@domains/*": [
        "./src/domains/*"
      ]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}