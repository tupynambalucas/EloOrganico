{
  "name": "@elo-organico/monorepo",
  "version": "0.1.0",
  "author": "Tupynambá Lucas Varela Rodrigues <tupynambalucas.dev>",
  "license": "CC-BY-NC-4.0",
  "homepage": "https://tupynambalucas.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tupynambalucas/EloOrganico.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "// [1] INSTALAÇÃO": "-------------------------------------------------------",
    "postinstall": "npm run build -w @elo-organico/shared",
    "// [2] DESENVOLVIMENTO (APP)": "-------------------------------------------------------",
    "dev:frontend": "npm run dev -w @elo-organico/frontend",
    "dev:backend": "npm run dev -w @elo-organico/backend",
    "dev:stack": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "backend:seed": "npm run seed -w @elo-organico/backend",
    "// [3] INFRAESTRUTURA LOCAL (DOCKER)": "-------------------------------------------------------",
    "infra:keygen": "node -e \"const fs=require('fs'); if(!fs.existsSync('mongo-keyfile')){fs.writeFileSync('mongo-keyfile', require('crypto').randomBytes(756).toString('base64')); console.log('✅ mongo-keyfile gerado com sucesso!')} else {console.log('ℹ️ mongo-keyfile já existe.')}\"",
    "infra:up": "npm run infra:keygen && docker compose up -d db redis",
    "infra:stop": "docker compose stop",
    "infra:down": "docker compose down",
    "infra:clean": "docker compose down --volumes && node -e \"const fs=require('fs'); if(fs.existsSync('mongo-keyfile')) fs.unlinkSync('mongo-keyfile')\"",
    "infra:reset": "npm run infra:clean && npm run infra:up",
    "// [4] BUILD E VERIFICAÇÃO": "-------------------------------------------------------",
    "build:all": "npm run build --workspaces --if-present",
    "build:backend": "npm run build -w @elo-organico/backend",
    "build:frontend": "npm run build -w @elo-organico/frontend",
    "build:shared": "npm run build -w @elo-organico/shared",
    "clean": "npm run clean --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "typecheck:all": "npm run typecheck --workspaces --if-present",
    "// [5] SIMULAÇÃO DE PRODUÇÃO": "-------------------------------------------------------",
    "prod:up": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "concurrently": "^8.2.2",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  }
}