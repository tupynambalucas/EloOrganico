{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@domains/*": [
        "./src/domains/*"
      ],
      "@elo-organico/shared": [
        "../shared/dist/index.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}