{
  "name": "@elo-organico/monorepo",
  "version": "0.1.0",
  "author": "Tupynambá Lucas Varela Rodrigues <tupynambalucas.dev>",
  "license": "CC-BY-NC-4.0",
  "homepage": "https://tupynambalucas.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tupynambalucas/EloOrganico.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "// --- 1. Lifecycle & Install ---": "",
    "postinstall": "npm run build -w @elo-organico/shared",

    "// --- 2. Development (Local Stack) ---": "",
    "dev:frontend": "npm run dev -w @elo-organico/frontend",
    "dev:backend": "npm run dev -w @elo-organico/backend",
    "dev:stack": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "backend:seed": "npm run seed -w @elo-organico/backend",

    "// --- 3. Build & Compilation ---": "",
    "build:all": "npm run build --workspaces --if-present",
    "backend:build": "npm run build -w @elo-organico/backend",
    "frontend:build": "npm run build -w @elo-organico/frontend",
    "shared:build": "npm run build -w @elo-organico/shared",

    "// --- 4. Maintenance (Clean & Check) ---": "",
    "clean": "npm run clean --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "typecheck:all": "npm run typecheck --workspaces --if-present",

    "// --- 4. Docker (Development Mode) ---": "",
    "docker:down": "docker compose down",

    "// --- 5. Database (Development Mode) ---": "",
    "db:up": "docker compose up -d db",
    "db:clean": "docker compose down --volumes",
    "db:reset": "npm run db:clean && npm run db:up",
    "db:gen-key": "echo \"CHAVE_FALSA_PARA_DEV_$(date +%s)\" > mongo-keyfile && echo \"✅ Keyfile gerado!\"",

    "// --- 6. Production (Docker Simulation) ---": "",
    "prod:up": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "prod:logs": "docker compose -f docker-compose.yml -f docker-compose.prod.yml logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^6.1.2",
    "eslint": "^9.33.0",
    "@eslint/js": "^9.33.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0"
  }
}