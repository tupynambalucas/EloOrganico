{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
        "@elo-organico/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [
        { "path": "../shared" }
    ]
}